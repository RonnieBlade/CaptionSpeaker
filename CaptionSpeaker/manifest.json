{
  "manifest_version": 3,
  "name": "CaptionSpeaker",
  "default_locale": "en",
  "description": "__MSG_appDescription__",
  "version": "2.0.0",
  "icons": {
    "16": "icon/Icon16.png",
    "48": "icon/Icon48.png",
    "128": "icon/Icon128.png"
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches":["https://www.youtube.com/watch*"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "storage",
    "tts"
  ],
  "host_permissions": ["https://www.youtube.com/watch*"],
  "action": {
    "default_title": "__MSG_PageActionDefaultTitle__",
    "default_icon": {
      "19": "icon/Icon19.png",
      "24": "icon/Icon24.png",
      "32": "icon/Icon32.png"
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "commands": {
    "enableEvent": {
      "description": "__MSG_KeyboardShortcutNameEnableEvent__"
    },
    "disableEvent": {
      "description": "__MSG_KeyboardShortcutNameDisableEvent__"
    }
  }
}
